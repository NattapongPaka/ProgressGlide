<TableRow
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="53dp"
    android:clickable="true"
    android:weightSum="1"
    android:baselineAligned="false"
    android:id="@+id/video">

    <!--  ListRow Left sided Thumbnail image -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:id="@+id/imageView2" />

        <TextView
            android:id="@+id/fileSenderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="sans"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:text="Alexander Sender"
            android:layout_marginLeft="56dp"
            android:ellipsize="end"
            android:maxWidth="200dp"
            style="@style/HeadTextRow"/>

        <TextView
            android:id="@+id/fileSenderDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="56dp"
            android:layout_toLeftOf="@+id/createdate"
            android:layout_toStartOf="@+id/createdate"
            android:text="Hey! Are you there? I need"
            style="@style/TitleTextRow"/>


        <ImageView
            android:id="@+id/userImage"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/defaultuserimg_sq" />

        <ImageView
            android:id="@+id/fileSenderIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_folder"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="false"
            android:background="#FFFFFF"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/imageViewLine"
            android:layout_gravity="bottom"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#DDDDDD" />

    </FrameLayout>

</TableRow>