<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:baselineAligned="false"
    android:id="@+id/row_chat_sticker_list">

    <!--  ListRow Left sided Thumbnail image -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/userImage"
            android:src="@drawable/contacts_defaultuserimg_sq"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tareef Jafferi"
            android:id="@+id/username"
            android:layout_gravity="left|top"
            android:layout_toRightOf="@+id/userImage"
            android:layout_toEndOf="@+id/userImage"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            style="@style/UsernameChatRow"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:id="@+id/stickerFrame"
            android:layout_below="@+id/username"
            android:layout_toRightOf="@+id/userImage"
            android:layout_toEndOf="@+id/userImage"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone"
                android:id="@+id/chat_id" />

            <TextView
                android:id="@+id/chat_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <ImageView
                android:layout_width="160dip"
                android:layout_height="160dip"
                android:id="@+id/sticker"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="10dip"
                android:layout_height="10dip"
                android:visibility="gone"
                android:id="@+id/sticker_code" />

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:27"
            android:id="@+id/chattime"
            android:layout_gravity="right|top"
            android:layout_toRightOf="@+id/stickerFrame"
            android:layout_toEndOf="@+id/stickerFrame"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="-36dp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            style="@style/TimeChatRow"/>
    </RelativeLayout>

</TableRow>