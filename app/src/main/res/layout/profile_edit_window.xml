<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top">


                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:background="#202020">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView2"
                        android:contentDescription=""
                        android:src="@drawable/contacts_button_add"
                        android:left="13dp" />


                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="16dip"
                        android:textStyle="normal"
                        android:layout_marginTop="8dip"
                        android:text="Edit" />


                </TableRow>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="170dp"
                    android:id="@+id/space2" />

                <ImageView
                    android:id="@+id/userProfileBlurred"
                    android:layout_width="320dip"
                    android:layout_height="180dip"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:scaleType="centerCrop"
                    android:background="#666666"

                    android:src="@drawable/placeholder" />

                <!--    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageView1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="Kittisak Jakkorn"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#FFFFFF"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:shadowColor="#20000000"
                        android:singleLine="false"></TextView> -->
                <ImageView
                    android:layout_width="131dp"
                    android:layout_height="30dp"
                    android:id="@+id/newPhoto"
                    android:src="@drawable/newphoto"
                    android:layout_alignBottom="@+id/space2"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000" />


                <ImageView
                    android:layout_width="210dp"
                    android:layout_height="210dp"
                    android:id="@+id/imageView"
                    android:src="@drawable/profilerings"
                    android:layout_above="@+id/textView7"
                    android:layout_marginTop="-34dp"
                    android:layout_centerHorizontal="true" />


                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/contacts_defaultuserimg" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/profileImage"
                    android:layout_marginLeft="40dp"
                    android:layout_toRightOf="@+id/profileImage"
                    android:orientation="vertical"
                    android:id="@+id/linearLayout">


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/profileImage"
                    android:layout_marginRight="40dp"
                    android:layout_toLeftOf="@+id/profileImage"
                    android:orientation="vertical">


                </LinearLayout>

                <android.support.v4.view.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/userProfileBlurred"
                    android:background="@drawable/rowheader1"

                    android:paddingTop="3dp" />


                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/textView7"
                    android:paddingTop="7dp"
                    android:paddingRight="-30dp"
                    android:src="@drawable/icon_up" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/textView7"
                    android:layout_toStartOf="@+id/imageView5"
                    android:layout_toLeftOf="@+id/imageView5"
                    android:weightSum="1"
                    android:background="#fff8f8f8">

                    <!--<ScrollView
                       android:layout_width="fill_parent"
                       android:layout_height="fill_parent">
                       <LinearLayout
                           android:layout_width="fill_parent"
                           android:layout_height="fill_parent"
                           android:orientation="vertical"> -->
                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profileImage"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="NAME"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        style="@style/HeadTextRow"
                        />


                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_marginRight="70dp"
                        android:layout_height="36dp"
                        android:inputType="textPersonName"
                        android:layout_marginLeft="10dp"
                        android:ems="10"
                        android:id="@+id/nameInputRow"
                        android:layout_centerVertical="true"
                        android:background="@drawable/textinput_long"
                        android:textColor="@color/text_secondary"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:paddingRight="10dp"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profileImage"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="TITLE"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        style="@style/HeadTextRow" />


                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_marginRight="70dp"
                        android:layout_height="36dp"
                        android:inputType="textPersonName"
                        android:layout_marginLeft="10dp"
                        android:ems="10"
                        android:id="@+id/titleTitleRow"
                        android:layout_centerVertical="true"
                        android:background="@drawable/textinput_long"
                        android:textColor="@color/text_secondary"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:paddingRight="10dp"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/phoneHeader"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profileImage"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="PHONE"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        style="@style/HeadTextRow" />

                    <dev.getconnectedapp.com.ProfileEditPhone
                        android:id="@+id/list_edit_phone"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/phoneHeader"
                        android:orientation="vertical" />

<!--                    <include layout="@layout/tab_edit_phone" ></include>
-->

                    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:layout_marginLeft="5dp">


                        <ImageView
                            android:id="@+id/imgAddPhone"
                            android:layout_width="200dp"
                            android:layout_height="18dip"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/plus"
                            android:cropToPadding="false"
                            android:scaleType="fitStart" />

                        <TextView
                            android:id="@+id/plusText"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:text="ADD NEW CONTACT NUMBER"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#999999"
                            android:textSize="12dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentTop="true" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/emailHeader"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profileImage"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="EMAIL ADDRESSES"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        style="@style/HeadTextRow" />


                    <dev.getconnectedapp.com.ProfileEditEmail
                        android:id="@+id/list_edit_email"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/emailHeader"
                        android:orientation="vertical" />



               <!--     <include layout="@layout/tab_edit_email" ></include>  -->

                    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:layout_marginLeft="5dp">


                        <ImageView
                            android:id="@+id/imgAddEmail"
                            android:layout_width="200dp"
                            android:layout_height="18dip"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="0dp"
                            android:src="@drawable/plus"
                            android:scaleType="fitStart" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="30dp"
                            android:text="ADD NEW EMAIL"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#999999"
                            android:textSize="12dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="30dp" />

                    </RelativeLayout>

                    <!--   <EditText
                           android:layout_width="304dp"
                           android:layout_height="36dp"
                           android:inputType="textPersonName"
                           android:layout_marginLeft="10dp"
                           android:ems="10"
                           android:id="@+id/editText"
                           android:layout_centerVertical="true"
                           android:background="@drawable/longinput"
                           /> -->
                    <TextView
                        android:id="@+id/instantHeader"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profileImage"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="INSTANT MESSENGER"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        style="@style/HeadTextRow" />

<!--
                    <include layout="@layout/tab_edit_instant" ></include>
-->
                    <dev.getconnectedapp.com.ProfileEditInstant
                        android:id="@+id/list_edit_instant"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/instantHeader"
                        android:orientation="vertical" />

                    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="100dp"
                        android:layout_marginLeft="5dp">


                        <ImageView
                            android:id="@+id/imgAddInstant"
                            android:layout_width="200dp"
                            android:layout_height="18dip"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="0dp"
                            android:src="@drawable/plus"
                            android:scaleType="fitStart" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="30dp"
                            android:text="ADD NEW INSTANT MESSENGER"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#999999"
                            android:textSize="14sp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentTop="true" />


                    </RelativeLayout>


                    <!--
            </LinearLayout></ScrollView> -->

                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New RadioButton"
        android:id="@+id/radioButton"
        android:layout_gravity="right" />
</LinearLayout>