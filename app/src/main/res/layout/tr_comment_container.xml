<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#EEEEEE">
    <TextView
        android:id="@+id/icon2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/commentbubble"
        android:background="@drawable/company_color"
        android:textColor="#FFFFFF"
        android:text="0"
        android:layout_gravity="center|left|top"
        android:gravity="center"
        android:layout_alignTop="@+id/icon"
        android:layout_alignLeft="@+id/icon"
        android:layout_alignStart="@+id/icon"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:textSize="12dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/icon3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/commentboxbg"
        android:layout_gravity="left|top"
        android:layout_alignTop="@+id/title"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="12dp" />
    <TextView
        android:id="@+id/icon4"
        android:layout_width="125dp"
        android:layout_height="24dp"
        android:src="@drawable/commentbubble"
        android:textColor="#000000"
        android:text="COMMENTS"
        android:layout_gravity="center|left|top"
        android:gravity="center"
        android:layout_alignTop="@+id/icon"
        android:layout_alignLeft="@+id/icon"
        android:layout_alignStart="@+id/icon"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:textSize="16dp"
        android:textStyle="normal" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <EditText
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/longinput"
            android:textSize="16dp"
            android:textStyle="normal"
            android:textColor="#382C2C"
            android:layout_toStartOf="@+id/ListDate"
            android:paddingLeft="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="3dp"
            android:inputType="textMultiLine" />

        <ImageButton
            android:id="@+id/ListDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/button_go"
            android:background="@drawable/company_color_radius"
            android:layout_alignBottom="@+id/comment"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:layout_marginBottom="2dp" />

    </RelativeLayout>

</RelativeLayout>