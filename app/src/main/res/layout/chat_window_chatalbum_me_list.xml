<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:baselineAligned="false"
    android:id="@+id/row_chat_album_me_list">

    <!--  ListRow Left sided Thumbnail image -->

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/chatw_yellowbubble"
            android:id="@+id/yellowBubble"
            android:layout_gravity="right">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="110dp"
                    android:id="@+id/albumImage"
                    android:src="@drawable/wallpaper5"
                    android:scaleType="centerCrop"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:background="#FFFFFF"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentEnd="false"
                    android:id="@+id/linearLayout4"
                    android:layout_below="@+id/albumImage">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:visibility="gone"
                        android:id="@+id/chat_id" />

                    <TextView
                        android:id="@+id/chat_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Album Name"
                        android:id="@+id/label_albumName"
                        android:textSize="14sp"
                        android:textColor="#222222"
                        android:textAlignment="center"
                        android:singleLine="true"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="ALBUM CREATED"
                        android:id="@+id/label_albumStatus"
                        android:textSize="11sp"
                        android:textColor="@color/text_gray"
                        android:textAlignment="center"
                        android:singleLine="true"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="0dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:visibility="gone"
                    android:id="@+id/textView15"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp" />

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/relativeLayout3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/company_color_circularcontainer"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentTop="false"
                    android:layout_below="@+id/albumImage"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-20dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:id="@+id/albumCount"
                        android:textSize="20sp"
                        android:layout_alignParentTop="false"
                        android:textColor="@color/text_primary"
                        android:textStyle="normal"
                        android:layout_centerInParent="true" />
                </RelativeLayout>
            </RelativeLayout>
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:27"
            android:visibility="visible"
            android:id="@+id/chattime"
            android:layout_marginTop="24dp"
            android:layout_marginRight="6dp"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            style="@style/TimeChatRow"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:visibility="gone"
            android:src="@drawable/check"
            android:id="@+id/read_user"
            android:layout_marginTop="24dp"
            android:layout_marginRight="15dp"
            android:singleLine="true"
            android:layout_gravity="left"
            android:layout_toLeftOf="@+id/chattime_user"
            android:layout_marginLeft="10dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Read by 1"
            android:id="@+id/read_group"
            android:layout_marginTop="24dp"
            android:layout_marginRight="6dp"
            android:textSize="11sp"
            android:textColor="@color/text_gray"
            android:singleLine="true"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="11:27"
            android:id="@+id/chattime_group"
            android:layout_marginTop="38dp"
            android:layout_marginRight="6dp"
            android:textSize="11sp"
            android:textColor="@color/text_gray"
            android:singleLine="true"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp" />

    </FrameLayout>

</TableRow>